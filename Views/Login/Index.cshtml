<link rel="stylesheet" href="~/css/login.css">

@{
    ViewData["Title"] = "Login";
}

<main>
    <img src="https://www.pngarts.com/files/3/Vegan-Food-PNG-Free-Download.png" alt="Logo">

    <form action="/usuario/login" method="post" class="login-form">
        @if(ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <h1>Login</h1>
        
        <section class="login-section">
            <h2 class="login-section-h2">Email:</h2>
            <input type="text" class="login-section-input" placeholder="Digite seu e-mail" name="email">
        </section>

        <section class="login-section">
            <h2 class="login-section-h2">Senha:</h2>
            <input type="password" class="login-section-input" placeholder="Digite sua senha" name="password">
        </section>

        <button type="submit">
            Entrar
            <span class="material-symbols-rounded">login</span>
        </button>
        <a href="/usuario/create" class="login-form-sign-in">NÃ£o tem uma conta? Cadastre-se agora</a>
    </form>
</main>